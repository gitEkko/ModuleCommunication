<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_addition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/num1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/num2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="25sp" />

        <!--<TextView-->
        <!--android:id="@+id/activity_result"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textColor="#FFCD6600"-->
        <!--android:textSize="30sp" />-->

        <TextView
            android:id="@+id/return_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textColor="#FFCD6600"
            android:textSize="50sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFE0"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/transferBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/transferBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/transferBtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/transferBtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textAllCaps="false"
            android:textSize="18sp" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFE0EEE0" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>